{
    "parser": "@typescript-eslint/parser",
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jasmine": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": [
        "build/"
    ],
    "rules": {
        "space-before-function-paren": "off",
        "semi": [
            "error",
            "always"
        ],
        "camelcase": "error",
        "quotes": [
            "error",
            "single"
        ]
    }
}
